---
// Social Media Linking Success Page
// This page is shown after users successfully link their social media accounts
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Social Media Linked - Barkhaus</title>
  <style>
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #04736b 0%, #132f2d 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .container {
      background: white;
      border-radius: 16px;
      padding: 48px;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      text-align: center;
      max-width: 500px;
      width: 90%;
    }

    .success-icon {
      font-size: 64px;
      margin-bottom: 24px;
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(-10px);
      }
      60% {
        transform: translateY(-5px);
      }
    }

    h1 {
      color: #04736b;
      margin-bottom: 16px;
      font-size: 28px;
    }

    .subtitle {
      color: #64748b;
      margin-bottom: 32px;
      font-size: 16px;
      line-height: 1.6;
    }

    .actions {
      display: flex;
      gap: 16px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      padding: 12px 24px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.2s;
      border: none;
      cursor: pointer;
      font-size: 14px;
    }

    .btn-primary {
      background: #04736b;
      color: white;
    }

    .btn-primary:hover {
      background: #132f2d;
    }

    .btn-secondary {
      background: #f1f5f9;
      color: #475569;
      border: 1px solid #e2e8f0;
    }

    .btn-secondary:hover {
      background: #e2e8f0;
    }

    .loading {
      display: none;
      align-items: center;
      gap: 12px;
      margin-top: 24px;
      color: #64748b;
    }

    .spinner {
      width: 20px;
      height: 20px;
      border: 2px solid #e2e8f0;
      border-top: 2px solid #04736b;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .auto-close-info {
      margin-top: 24px;
      padding: 16px;
      background: #f0fdf4;
      border: 1px solid #16a34a;
      border-radius: 8px;
      color: #15803d;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="success-icon">üéâ</div>
    
    <h1>Social Media Account Linked!</h1>
    
    <p class="subtitle">
      Great! Your social media account has been successfully connected to Barkhaus. 
      You can now publish posts directly from your admin dashboard.
    </p>

    <div class="actions">
      <button onclick="closeWindow()" class="btn btn-primary">
        ‚úÖ Continue
      </button>
      
      <a href="/admin/index.html" class="btn btn-secondary">
        üè† Go to Dashboard
      </a>
    </div>

    <div class="loading" id="loading">
      <div class="spinner"></div>
      <span>Notifying parent window...</span>
    </div>

    <div class="auto-close-info">
      üí° This window will close automatically in <span id="countdown">5</span> seconds
    </div>
  </div>

  <script>
    // Notify parent window that linking was successful
    function notifyParent() {
      try {
        // Try to notify the parent window
        if (window.opener) {
          window.opener.postMessage({
            type: 'social-linked',
            success: true,
            timestamp: new Date().toISOString()
          }, window.location.origin);
          console.log('‚úÖ Notified parent window of successful linking');
        }
      } catch (error) {
        console.error('Error notifying parent window:', error);
      }
    }

    // Close the window
    function closeWindow() {
      document.getElementById('loading').style.display = 'flex';
      
      // Notify parent first
      notifyParent();
      
      // Close after a short delay
      setTimeout(() => {
        if (window.opener) {
          window.close();
        } else {
          // If not opened as popup, redirect to dashboard
          window.location.href = '/admin/index.html';
        }
      }, 1000);
    }

    // Auto-close countdown
    let countdown = 5;
    const countdownElement = document.getElementById('countdown');
    
    const countdownInterval = setInterval(() => {
      countdown--;
      countdownElement.textContent = countdown;
      
      if (countdown <= 0) {
        clearInterval(countdownInterval);
        closeWindow();
      }
    }, 1000);

    // Notify parent window immediately when page loads
    window.addEventListener('load', () => {
      notifyParent();
    });

    // Handle manual close button click
    document.querySelector('.btn-primary').addEventListener('click', () => {
      clearInterval(countdownInterval);
      closeWindow();
    });
  </script>
</body>
</html>
