---
/**
 * * Example use case of the CSPicture component if you need to use different images on mobile and desktop, for art direction.
 * * If you're fine with using the same image on all devices, you can use an >Image /> or <Picture /> component.
**/
// Import the component and all the images you want to use with it
import CSPicture from "@components/TemplateComponents/CSPicture.astro";
import mobileImage from "@assets/images/CTA/cta_mbpr.png"
import desktopImage from "@assets/images/CTA/cta_mbpr.png"
import fallbackImage from "@assets/images/CTA/cta_mbpr.png"

// Accept props for dynamic content
export interface Props {
  headline?: string;
  subheadline?: string;
  body_text?: string;
  button_text?: string;
  button_link?: string;
}

const {
  headline = "Ready to Make a Difference?",
  subheadline = "",
  body_text = "Every animal deserves a loving home. Whether you're looking to adopt, foster, or volunteer, there are many ways you can help save lives and make a difference in our community.",
  button_text = "Get Involved Today",
  button_link = "/applications"
} = Astro.props;
---

<section id="cta">
  <div class="container">
    {subheadline && <span class="cs-topper">{subheadline}</span>}
    <h2 class="title">
      {headline}
    </h2>
    <p>
      {body_text}
    </p>
    <a href={button_link} class="cs-button-solid">{button_text}</a>
  </div>
  <CSPicture
    mobileImgUrl={mobileImage}
    mobileMediaWidth="600px"
    desktopImgUrl={desktopImage}
    desktopMediaWidth="601px"
    fallbackImgUrl={fallbackImage}
    alt=""
  />
  
</section>

<style lang="less">
  
/* Mobile */
@media only screen and (min-width: 0em) {
#cta {
    position: relative;
    overflow: hidden;
    padding: clamp(4rem, 12vw, 9rem) 0;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);

    &:before {
      content: "";
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.45);
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
    }

.container {
      text-align: center;
      position: relative;
      z-index: 1;
    }

    .title {
      font-size: ~"min(9vw, 3rem)";
      font-weight: 900;
      line-height: 58/48;
      text-align: center;
      margin-bottom: (36/16rem);
      color: #fff;
      position: relative;
    }

    p {
      text-align: center;
      width: 96%;
      max-width: (598/16rem);
      margin: auto;
      margin-bottom: (36/16rem);
      color: #fff;
      opacity: 1;
    }
  }
}

/* Small Desktop */
@media only screen and (min-width: 64em) {
  #cta {
    padding: clamp(6rem, 14vw, 12rem) 0;
  }
}

/* Large Desktop */
@media only screen and (min-width: 1300px) {
  #cta {
    margin-top: (100/16rem);
    &:before {
      display: none;
    }
    &:after {
      content: "";
      width: 100%;
      height: (1108/16rem);
      background: url("/assets/svgs/cta-squares.svg");
      background-position: center;
      background-size: contain;
      background-repeat: no-repeat;
      opacity: 1;
      display: block;
      position: absolute;
      bottom: 0;
      left: 50%;
      z-index: -3;
      transform: translateX(-50%);
    }
    .container {
      width: 90.0625%;
      margin: auto;
    }
  }
}

/* Dark Mode */
@media only screen and (min-width: 0em) {
  body.dark-mode {
    #cta {
      &:after {
        display: none;
      }
    }
  }
}
</style>
