---
import BaseLayout from "@layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
---

<BaseLayout
  title="Mission Bay Puppy Rescue - Donate"
  description="Support Mission Bay Puppy Rescue with a donation. Your contribution directly helps animals in need get medical care, food, shelter, and love."
>
  <!-- ============================================ -->
  <!--                 Page Header                  -->
  <!-- ============================================ -->
  
  <section id="page-header">
    <div class="cs-container">
      <h1 class="cs-title">Support Our Mission</h1>
      <p class="cs-text">
        Your donation directly impacts the lives of animals in need. Every dollar helps us provide 
        medical care, food, shelter, and love to animals waiting for their forever homes.
      </p>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Donation Impact                 -->
  <!-- ============================================ -->
  
  <section id="donation-impact">
    <div class="cs-container">
      <div class="cs-content">
        <div class="cs-text-content">
          <h2>Your Impact</h2>
          <p>
            Every donation, no matter the size, makes a real difference in the lives of animals. 
            Here's how your generosity helps us continue our life-saving work:
          </p>
          
          <div class="cs-impact-stats">
            <div class="cs-stat">
              <div class="cs-number">500+</div>
              <div class="cs-label">Animals Rescued This Year</div>
            </div>
            <div class="cs-stat">
              <div class="cs-number">95%</div>
              <div class="cs-label">Adoption Success Rate</div>
            </div>
            <div class="cs-stat">
              <div class="cs-number">24/7</div>
              <div class="cs-label">Emergency Care Available</div>
            </div>
          </div>
        </div>
        
        <div class="cs-image-content">
          <img 
            src="/assets/images/donation-impact.jpg" 
            alt="Rescued animals receiving care"
            width="500"
            height="400"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Donation Levels                 -->
  <!-- ============================================ -->
  
  <section id="donation-levels">
    <div class="cs-container">
      <h2 class="cs-section-title">Choose Your Impact Level</h2>
      
      <div class="cs-donation-grid">
        <div class="cs-donation-card">
          <div class="cs-amount">$25</div>
          <h3>Food & Comfort</h3>
          <p>Provides food for one animal for a week</p>
          <ul class="cs-includes">
            <li>Nutritious meals</li>
            <li>Treats and enrichment</li>
            <li>Comfort items</li>
          </ul>
          <button class="cs-donate-button" data-amount="25">Donate $25</button>
        </div>
        
        <div class="cs-donation-card cs-featured">
          <div class="cs-popular-badge">Most Popular</div>
          <div class="cs-amount">$50</div>
          <h3>Basic Medical Care</h3>
          <p>Covers basic medical care and vaccinations</p>
          <ul class="cs-includes">
            <li>Health examination</li>
            <li>Vaccinations</li>
            <li>Deworming treatment</li>
            <li>Basic medications</li>
          </ul>
          <button class="cs-donate-button" data-amount="50">Donate $50</button>
        </div>
        
        <div class="cs-donation-card">
          <div class="cs-amount">$100</div>
          <h3>Spay/Neuter Surgery</h3>
          <p>Sponsors spay/neuter surgery for one animal</p>
          <ul class="cs-includes">
            <li>Pre-surgical exam</li>
            <li>Surgery procedure</li>
            <li>Post-op care</li>
            <li>Pain medication</li>
          </ul>
          <button class="cs-donate-button" data-amount="100">Donate $100</button>
        </div>
        
        <div class="cs-donation-card">
          <div class="cs-amount">$250</div>
          <h3>Emergency Treatment</h3>
          <p>Covers emergency medical treatment</p>
          <ul class="cs-includes">
            <li>Emergency surgery</li>
            <li>Diagnostic tests</li>
            <li>Specialized treatment</li>
            <li>Extended recovery care</li>
          </ul>
          <button class="cs-donate-button" data-amount="250">Donate $250</button>
        </div>
      </div>
      
      <div class="cs-custom-donation">
        <h3>Custom Amount</h3>
        <p>Choose your own donation amount to support our mission</p>
        <div class="cs-custom-form">
          <input type="number" id="custom-amount" placeholder="Enter amount" min="1" />
          <button class="cs-donate-button" id="custom-donate">Donate</button>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Monthly Giving                  -->
  <!-- ============================================ -->
  
  <section id="monthly-giving">
    <div class="cs-container">
      <div class="cs-monthly-content">
        <div class="cs-text-side">
          <h2>Become a Monthly Hero</h2>
          <p>
            Monthly donations provide steady support that allows us to plan ahead and 
            respond quickly to emergencies. As a monthly donor, you become part of our 
            inner circle of animal heroes.
          </p>
          
          <div class="cs-monthly-benefits">
            <h3>Monthly Donor Benefits:</h3>
            <ul>
              <li>Exclusive updates on animals you've helped</li>
              <li>Priority invitations to special events</li>
              <li>Annual donor appreciation gifts</li>
              <li>Behind-the-scenes facility tours</li>
              <li>Tax-deductible receipts automatically sent</li>
            </ul>
          </div>
          
          <div class="cs-monthly-options">
            <button class="cs-monthly-button" data-monthly="15">$15/month</button>
            <button class="cs-monthly-button" data-monthly="25">$25/month</button>
            <button class="cs-monthly-button" data-monthly="50">$50/month</button>
          </div>
        </div>
        
        <div class="cs-image-side">
          <img 
            src="/assets/images/monthly-giving.jpg" 
            alt="Happy adopted pets with their families"
            width="500"
            height="400"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Other Ways to Give              -->
  <!-- ============================================ -->
  
  <section id="other-ways">
    <div class="cs-container">
      <h2 class="cs-section-title">Other Ways to Support Us</h2>
      
      <div class="cs-ways-grid">
        <div class="cs-way-card">
          <div class="cs-icon">
            <img src="/assets/svgs/wishlist.svg" alt="Wishlist icon" width="50" height="50" />
          </div>
          <h3>Wishlist Items</h3>
          <p>Donate supplies directly from our Amazon wishlist</p>
          <a href="#" class="cs-way-button">View Wishlist</a>
        </div>
        
        <div class="cs-way-card">
          <div class="cs-icon">
            <img src="/assets/svgs/legacy.svg" alt="Legacy icon" width="50" height="50" />
          </div>
          <h3>Legacy Giving</h3>
          <p>Include us in your will or estate planning</p>
          <a href="/contact" class="cs-way-button">Learn More</a>
        </div>
        
        <div class="cs-way-card">
          <div class="cs-icon">
            <img src="/assets/svgs/corporate.svg" alt="Corporate icon" width="50" height="50" />
          </div>
          <h3>Corporate Sponsorship</h3>
          <p>Partner with us for corporate giving opportunities</p>
          <a href="/contact" class="cs-way-button">Contact Us</a>
        </div>
        
        <div class="cs-way-card">
          <div class="cs-icon">
            <img src="/assets/svgs/fundraiser.svg" alt="Fundraiser icon" width="50" height="50" />
          </div>
          <h3>Host a Fundraiser</h3>
          <p>Organize your own fundraising event for our animals</p>
          <a href="/contact" class="cs-way-button">Get Started</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Transparency                    -->
  <!-- ============================================ -->
  
  <section id="transparency">
    <div class="cs-container">
      <div class="cs-transparency-content">
        <h2>Financial Transparency</h2>
        <p>
          We believe in complete transparency about how your donations are used. 
          Here's how every dollar is allocated to maximize impact for animals in need.
        </p>
        
        <div class="cs-allocation-chart">
          <div class="cs-allocation-item">
            <div class="cs-percentage">75%</div>
            <div class="cs-category">Direct Animal Care</div>
            <div class="cs-description">Medical care, food, shelter, and daily needs</div>
          </div>
          <div class="cs-allocation-item">
            <div class="cs-percentage">15%</div>
            <div class="cs-category">Facility & Operations</div>
            <div class="cs-description">Utilities, maintenance, and equipment</div>
          </div>
          <div class="cs-allocation-item">
            <div class="cs-percentage">10%</div>
            <div class="cs-category">Administration</div>
            <div class="cs-description">Staff, insurance, and organizational costs</div>
          </div>
        </div>
        
        <div class="cs-documents">
          <h3>Financial Documents</h3>
          <div class="cs-document-links">
            <a href="#" class="cs-document-link">Annual Report 2023</a>
            <a href="#" class="cs-document-link">IRS Form 990</a>
            <a href="#" class="cs-document-link">Financial Statements</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>

<style lang="less">
  /* Page Header */
  #page-header {
    padding: var(--sectionPadding);
    background: linear-gradient(135deg, var(--primary) 0%, var(--primaryDark) 100%);
    color: white;
    text-align: center;

    .cs-container {
      max-width: 800px;
      margin: 0 auto;
    }

    .cs-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
      margin-bottom: 1rem;
      color: rgb(0, 0, 0) !important;
    }

    .cs-text {
      font-size: 1.125rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.9);
    }
  }

  /* Donation Impact */
  #donation-impact {
    padding: var(--sectionPadding);

    .cs-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
    }

    .cs-text-content {
      h2 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: var(--headerColor);
      }

      p {
        font-size: 1.125rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: var(--bodyTextColor);
      }
    }

    .cs-impact-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 1.5rem;
    }

    .cs-stat {
      text-align: center;
      padding: 1.5rem;
      background: var(--accent);
      border-radius: 12px;

      .cs-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.5rem;
      }

      .cs-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--headerColor);
      }
    }

    .cs-image-content {
      img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 12px;
      }
    }
  }

  /* Donation Levels */
  #donation-levels {
    padding: var(--sectionPadding);
    background: #f8f9fa;

    .cs-section-title {
      font-size: 2.5rem;
      text-align: center;
      margin-bottom: 3rem;
      color: var(--headerColor);
    }

    .cs-donation-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }

    .cs-donation-card {
      background: white;
      padding: 2.5rem;
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      text-align: center;
      position: relative;
      transition: transform 0.3s ease, box-shadow 0.3s ease;

      &:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
      }

      &.cs-featured {
        border: 3px solid var(--primary);
        transform: scale(1.05);

        &:hover {
          transform: scale(1.05) translateY(-5px);
        }
      }

      .cs-popular-badge {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--primary);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
      }

      .cs-amount {
        font-size: 3rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 1rem;
      }

      h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--headerColor);
      }

      p {
        margin-bottom: 1.5rem;
        color: var(--bodyTextColor);
      }

      .cs-includes {
        list-style: none;
        padding: 0;
        margin-bottom: 2rem;

        li {
          padding: 0.5rem 0;
          border-bottom: 1px solid #eee;

          &:last-child {
            border-bottom: none;
          }

          &:before {
            content: "✓";
            color: var(--primary);
            font-weight: bold;
            margin-right: 0.5rem;
          }
        }
      }

      .cs-donate-button {
        width: 100%;
        padding: 1rem 2rem;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;

        &:hover {
          background: var(--primaryDark);
          transform: translateY(-2px);
        }
      }
    }

    .cs-custom-donation {
      text-align: center;
      max-width: 500px;
      margin: 0 auto;
      padding: 2rem;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);

      h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--headerColor);
      }

      p {
        margin-bottom: 1.5rem;
        color: var(--bodyTextColor);
      }

      .cs-custom-form {
        display: flex;
        gap: 1rem;

        input {
          flex: 1;
          padding: 1rem;
          border: 2px solid #ddd;
          border-radius: 8px;
          font-size: 1rem;

          &:focus {
            outline: none;
            border-color: var(--primary);
          }
        }

        button {
          padding: 1rem 2rem;
          background: var(--primary);
          color: white;
          border: none;
          border-radius: 8px;
          font-weight: 600;
          cursor: pointer;
          transition: background 0.3s ease;

          &:hover {
            background: var(--primaryDark);
          }
        }
      }
    }
  }

  /* Monthly Giving */
  #monthly-giving {
    padding: var(--sectionPadding);

    .cs-monthly-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
    }

    .cs-text-side {
      h2 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: var(--headerColor);
      }

      p {
        font-size: 1.125rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: var(--bodyTextColor);
      }

      .cs-monthly-benefits {
        margin-bottom: 2rem;

        h3 {
          font-size: 1.25rem;
          margin-bottom: 1rem;
          color: var(--headerColor);
        }

        ul {
          list-style: none;
          padding: 0;

          li {
            padding: 0.5rem 0;

            &:before {
              content: "★";
              color: var(--primary);
              font-weight: bold;
              margin-right: 0.5rem;
            }
          }
        }
      }

      .cs-monthly-options {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .cs-monthly-button {
        padding: 1rem 1.5rem;
        background: transparent;
        color: var(--primary);
        border: 2px solid var(--primary);
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;

        &:hover {
          background: var(--primary);
          color: white;
        }
      }
    }

    .cs-image-side {
      img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 12px;
      }
    }
  }

  /* Other Ways */
  #other-ways {
    padding: var(--sectionPadding);
    background: #f8f9fa;

    .cs-section-title {
      font-size: 2.5rem;
      text-align: center;
      margin-bottom: 3rem;
      color: var(--headerColor);
    }

    .cs-ways-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 1000px;
      margin: 0 auto;
    }

    .cs-way-card {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.3s ease;

      &:hover {
        transform: translateY(-5px);
      }

      .cs-icon {
        margin-bottom: 1.5rem;

        img {
          filter: brightness(0) saturate(100%) invert(47%) sepia(96%) saturate(1237%) hue-rotate(14deg) brightness(94%) contrast(91%);
        }
      }

      h3 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        color: var(--headerColor);
      }

      p {
        margin-bottom: 1.5rem;
        color: var(--bodyTextColor);
      }

      .cs-way-button {
        padding: 0.75rem 1.5rem;
        background: var(--primary);
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.3s ease;

        &:hover {
          background: var(--primaryDark);
        }
      }
    }
  }

  /* Transparency */
  #transparency {
    padding: var(--sectionPadding);

    .cs-transparency-content {
      max-width: 1000px;
      margin: 0 auto;
      text-align: center;

      h2 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: var(--headerColor);
      }

      p {
        font-size: 1.125rem;
        line-height: 1.6;
        margin-bottom: 3rem;
        color: var(--bodyTextColor);
      }
    }

    .cs-allocation-chart {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .cs-allocation-item {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      text-align: center;

      .cs-percentage {
        font-size: 3rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 1rem;
      }

      .cs-category {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--headerColor);
      }

      .cs-description {
        font-size: 0.875rem;
        color: var(--bodyTextColor);
      }
    }

    .cs-documents {
      h3 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: var(--headerColor);
      }

      .cs-document-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .cs-document-link {
        padding: 0.75rem 1.5rem;
        background: transparent;
        color: var(--primary);
        border: 2px solid var(--primary);
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;

        &:hover {
          background: var(--primary);
          color: white;
        }
      }
    }
  }

  /* Mobile Responsive */
  @media only screen and (max-width: 768px) {
    #donation-impact .cs-content,
    #monthly-giving .cs-monthly-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .cs-donation-grid {
      grid-template-columns: 1fr;
    }

    .cs-custom-form {
      flex-direction: column;
    }

    .cs-monthly-options {
      justify-content: center;
    }

    .cs-ways-grid {
      grid-template-columns: 1fr;
    }

    .cs-allocation-chart {
      grid-template-columns: 1fr;
    }

    .cs-document-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  // Donation button functionality
  document.addEventListener('DOMContentLoaded', function() {
    const donateButtons = document.querySelectorAll('.cs-donate-button[data-amount]');
    const customDonateButton = document.getElementById('custom-donate');
    const customAmountInput = document.getElementById('custom-amount') as HTMLInputElement;
    const monthlyButtons = document.querySelectorAll('.cs-monthly-button[data-monthly]');

    // Handle preset donation amounts
    donateButtons.forEach(button => {
      button.addEventListener('click', function() {
        const amount = this.getAttribute('data-amount');
        // In a real implementation, this would redirect to a payment processor
        alert(`Redirecting to donation page for $${amount}`);
      });
    });

    // Handle custom donation amount
    if (customDonateButton && customAmountInput) {
      customDonateButton.addEventListener('click', function() {
        const amount = customAmountInput.value;
        if (amount && parseFloat(amount) > 0) {
          alert(`Redirecting to donation page for $${amount}`);
        } else {
          alert('Please enter a valid donation amount');
        }
      });
    }

    // Handle monthly donations
    monthlyButtons.forEach(button => {
      button.addEventListener('click', function() {
        const amount = this.getAttribute('data-monthly');
        alert(`Redirecting to monthly donation setup for $${amount}/month`);
      });
    });
  });
</script>
